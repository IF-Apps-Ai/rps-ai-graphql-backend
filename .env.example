# Application Configuration
APP_PORT=3005
APP_HOST=0.0.0.0
APP_ENV=development
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3005

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DATABASE=rps_ai_db

# MySQL/MariaDB Configuration for SIMAK
SIMAK_MYSQL_HOST=localhost
SIMAK_MYSQL_PORT=3306
SIMAK_MYSQL_USER=simak_user
SIMAK_MYSQL_PASSWORD=password
SIMAK_MYSQL_DATABASE=simak_db

# MongoDB Configuration for Logging
LOGGER_MONGO_URI=mongodb://localhost:27017/rps_ai_logs

# Database Connection Optimization
DB_MAX_RETRIES=5
DB_RETRY_DELAY=2000
DB_CONNECTION_TIMEOUT=30000
DB_POOL_SIZE=10

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRATION=10h

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=16383
OPENAI_TEMPERATURE=0.7

# Rate Limiting Configuration
AI_RATE_LIMIT=10
API_RATE_LIMIT=100

# Redis Configuration (Optional for advanced caching)
# REDIS_URL=redis://localhost:6379

# Logging Configuration
LOG_LEVEL=info
LOG_MAX_FILES=7
LOG_MAX_SIZE=20m

# Performance Configuration
MAX_REQUEST_SIZE=10mb
REQUEST_TIMEOUT=30000

# Security Configuration
HELMET_ENABLED=true
CORS_ENABLED=true

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=1000
